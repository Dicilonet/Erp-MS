
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // La regla por defecto es denegar todo para máxima seguridad.
    // Nadie puede leer o escribir en la raíz del bucket.
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Permitir a los usuarios autenticados escribir en una carpeta con su propio ID.
    // Útil para avatares, archivos privados, etc.
    match /users/{userId}/{allPaths=**} {
      // Solo el usuario dueño de la carpeta puede escribir (crear, actualizar, eliminar).
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Cualquiera puede leer los archivos (útil para imágenes de perfil públicas).
      // Cambia a `if request.auth != null;` si quieres que solo usuarios autenticados puedan verlos.
      allow read: if true;
    }
    
    // Reglas para los tickets de soporte. Permite subir audios.
    match /support-audio/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Reglas para las facturas de gastos.
    match /receipts/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
